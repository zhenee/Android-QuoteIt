<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"


    android:id="@+id/card_view"
    android:layout_gravity="center"

    android:layout_width="match_parent"
    android:layout_marginTop="1.5dp"
   android:layout_height="210dp"
   >

    <RelativeLayout
        android:background="@color/material_blue_grey_950"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="2dp">

    <com.pkmmte.view.CircularImageView
        android:id="@+id/userImage"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:transitionName="userImage"

        card_view:border="true"
        card_view:border_color="@color/material_blue_grey_800"
        card_view:border_width="2dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/quoteText"
        android:layout_alignStart="@+id/quoteText"
        android:layout_marginLeft="5dp"
         />


    <TextView
        android:id="@+id/nameText"
        android:text="Haider"
        android:transitionName="userName"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:typeface="sans"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:textColor="#CCC"
        android:layout_marginStart="18dp"
        android:layout_alignTop="@+id/userImage"
        android:layout_toRightOf="@+id/userImage"
        android:layout_toEndOf="@+id/userImage"
        android:layout_marginTop="23dp" />

        <com.github.curioustechizen.ago.RelativeTimeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 mins ago"
            android:id="@+id/timestamp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginRight="15dp"
            android:layout_alignTop="@+id/nameText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <it.qoute.zaingz.com.quoteit_android.AutoResizeTextView

            android:layout_width="wrap_content"
            android:layout_height="90dp"



            android:text="You are master of your owner fate lol."
            android:id="@+id/quoteText"
            android:textSize="35sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/dim_foreground_material_dark"
            android:layout_below="@+id/userImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/timestamp"
            android:layout_alignEnd="@+id/timestamp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-Alan Turing"

            android:textStyle="italic"
            android:id="@+id/author"

            android:textColor="@android:color/darker_gray"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_alignRight="@+id/quoteText"
            android:layout_alignEnd="@+id/quoteText" />


    </RelativeLayout>
</android.support.v7.widget.CardView>

